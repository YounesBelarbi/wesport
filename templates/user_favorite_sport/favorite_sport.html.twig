{% extends 'base.html.twig' %}

{% block title %}Rajouter un sort en favori
{% endblock %}

{% block body %}

	<section class="page-top-section">
		<div class="container">
			<h2>Rajouter un sport favori</h2>
		</div>
	</section>
	<section class="form-registration-section">
		<div class="container mb-5 pt-5 mt-5">
			<div class="row justify-content-md-center form-div">
				{{ form_start(favoriteSportForm, {
                'attr': {'class': 'contact-form col-10 ',
            }})}}
				<div class="row">
					{{form_row(favoriteSportForm.sport)}}
				</div>
				{{form_row(favoriteSportForm.send)}}
				{{form_end(favoriteSportForm)}}
			</div>
		</div>
	</section>


{% endblock %}
