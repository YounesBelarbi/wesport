{% extends 'base.html.twig' %}

{% block title %}Hello ContactListController!{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
    {% for list in contactList %}
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %} 
                    {# only the user who cretate a contact list can view and delete or modify it #}
            {% if user.id == list.creator.id %}
                <div class="card" style="width: 18rem;">
                    <img src="..." class="card-img-top" alt="...">
                    <div class="card-body">
                    <h5 class="card-title">{{list.name}}</h5>
                    </div>
                    {% for user in list.userContactList %}
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">{{user.username}}</li>
                        </ul>
                    {% endfor %}
                    <div class="card-body">               
                       <a href="{{ path('contact_list_updating', {id: list.id}) }}" class="card-link">modifié la liste</a>
                        <a href="{{ path('contact_list_deleting', {id: list.id}) }}" class="card-link">supprimé la liste</a>
                    </div>
                </div>
            {% endif %}
        {% endif %} 
    {% endfor %}
    </div>
</div>
{% endblock %}
