{% extends 'base.html.twig' %}

{% block title %}Rechercher des sportifs
{% endblock %}

{% block body %}

	<section id="search_section">
		<div class="container">
			{{form_start(form)}}
			<div class="row">
				<div class="col-lg-12">
					<div class="row">
						<div class="col-lg-3 col-md-3 col-sm-12 p-0">
							{{form_row(form.age)}}
						</div>
						<div class="col-lg-3 col-md-3 col-sm-12 p-0">
							{{form_row(form.city)}}
						</div>
						<div class="col-lg-3 col-md-3 col-sm-12 p-0">
							{{form_row(form.sport)}}
						</div>
					</div>
					<div class="col-lg-12 col-md-12 col-sm-12 p-0 text-center">
						{{form_row(form.send)}}
					</div>
				</div>
			</div>
		</div>
		{{form_end(form)}}
	</section>

	<section id="result_section">
		{% if app.request.method == "POST" %}
			<div class="container mt-5">
				{% if users | length == 0 %}
					<div class="d-flex justify-content-between m-5 row ">
						<h3>Aucun résultat pour votre recherche</h3>
						<a href="{{ path('sportresearch') }}" class="btn btn-primary btn-lg active " role="button" aria-pressed="true">Nouvelle recherche</a>
					</div>
				{% else %}
					<div class="d-flex justify-content-between m-5 row ">
						<h3 class="col-md-6">{{users | length}}
							résultats correspondent à votre recherche</h3>
						<a href="{{ path('sportresearch') }}" class="btn btn-primary btn-lg active " role="button" aria-pressed="true">Nouvelle recherche</a>
					</div>
					{% for user in users %}
						<div class="row mb-4 justify-content-center" id="result_content">
							<div class="col-md-8">
								<div class="card">
									<div class="card-body">
										<div class="row ">
											<div class="col-md-3">
												<img src="{{asset('assets/img/avatar.svg')}}" alt="">
											</div>
											<div class="col-md-5" id="profil_information">
												<h3 id="username">{{user.username}}
												</h3>
												<p id="age">{{user.age}}
													ans</p>
												<p id="city">{{user.city}}</p>
											</div>
											<div class="col-md-4">
												<h6></h6>
												<div class="sub-row">
													<button type="button" class="btn btn-secondary btn-sm btn-block">Voir profile</button>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					{% endfor %}
				{% endif %}
			</div>
		{% endif %}
	</section>
{% endblock %}
{% block javascripts %}
	<script src="{{asset('assets/js/index.js')}}"></script>
{% endblock %}
